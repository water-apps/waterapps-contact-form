# Copy to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars â€” it's in .gitignore

aws_region   = "ap-southeast-2"
project      = "waterapps"
environment  = "prod"
source_email = "varun@waterapps.com.au"
target_email = "varun@waterapps.com.au"

allowed_origins = [
  "https://www.waterapps.com.au",
  "https://waterapps.com.au"
  # "http://localhost:5173", # local dev
  # "http://localhost:3000"  # local dev
]

# Anti-spam / request handling
max_body_bytes     = 16384
api_throttling_burst_limit = 20
api_throttling_rate_limit  = 5
log_level          = "info"

# Scheduler settings (UTC)
booking_type                  = "DISCOVERY_30M"
booking_slot_duration_minutes = 30
booking_lookahead_days        = 14
booking_min_lead_minutes      = 120
booking_start_hour_utc        = 0
booking_end_hour_utc          = 8
booking_workdays_utc          = [1, 2, 3, 4, 5]

# Legacy reviews compatibility (keep true until explicit retirement/migration)
preserve_legacy_reviews_stack = true
legacy_reviews_table_name     = "waterapps-prod-independent-reviews"
legacy_reviews_table_arn      = "arn:aws:dynamodb:ap-southeast-2:815373603734:table/waterapps-prod-independent-reviews"
legacy_review_retention_days  = 365
legacy_review_jwt_issuer      = "https://cognito-idp.ap-southeast-2.amazonaws.com/ap-southeast-2_abk0SHGQp"
legacy_review_jwt_audience    = "82lu2ao83rcqvjbcbnmcfbe3e"
