# Copy to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars â€” it's in .gitignore

aws_region   = "ap-southeast-2"
project      = "waterapps"
environment  = "prod"
source_email = "hello@waterapps.com.au"
target_email = "hello@waterapps.com.au"

allowed_origins = [
  "https://www.waterapps.com.au",
  "https://waterapps.com.au"
  # "http://localhost:5173", # local dev
  # "http://localhost:3000"  # local dev
]

# Anti-spam / request handling
max_body_bytes     = 16384
api_throttling_burst_limit = 20
api_throttling_rate_limit  = 5
log_level          = "info"

# Independent reviews persistence
# reviews_table_name = "waterapps-prod-independent-reviews" # optional override
review_retention_days = 365

# Admin API authorization (recommended: keep enabled)
# Use values from waterapps-20-infra-enterprise/02-security outputs:
# - management_portal_cognito_issuer_url
# - management_portal_cognito_user_pool_client_id
enable_review_admin_jwt_auth = true
review_admin_jwt_issuer       = "https://cognito-idp.ap-southeast-2.amazonaws.com/ap-southeast-2_xxxxxxxxx"
review_admin_jwt_audience     = ["xxxxxxxxxxxxxxxxxxxxxxxxxx"]
